# Environment Variables Configuration

# Backend Configuration
API_PORT=8000
API_HOST=0.0.0.0
DEBUG=False

# Database
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/bugrisk?retryWrites=true&w=majority
DATABASE_NAME=bugrisk_production

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=1800

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168

# External APIs
OPENAI_API_KEY=sk-...
GITHUB_TOKEN=ghp_...
GITLAB_TOKEN=glpat-...
JIRA_API_TOKEN=your-jira-token

# Notification Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_PER_HOUR=1000

# ML Model
MODEL_PATH=./ml/models/risk_model.pkl
MODEL_THRESHOLD_CRITICAL=0.8
MODEL_THRESHOLD_HIGH=0.6
MODEL_THRESHOLD_MEDIUM=0.4

# Performance
MAX_UPLOAD_SIZE_MB=100
CONCURRENT_SCANS=5
SCAN_TIMEOUT_MINUTES=30

# Analytics
ANALYTICS_RETENTION_DAYS=365
COST_PER_CRITICAL_BUG=5000
COST_PER_HIGH_BUG=2000
COST_PER_MEDIUM_BUG=500
DEV_HOUR_COST=75

# Features Flags
ENABLE_NOTIFICATIONS=true
ENABLE_SECURITY_SCANNING=true
ENABLE_ML_EXPLANATIONS=true
ENABLE_TEAM_ANALYTICS=true
ENABLE_INTEGRATIONS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bugrisk.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
